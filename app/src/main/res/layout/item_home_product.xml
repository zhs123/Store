<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_home_product_linear"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/item_home_product_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/item_home_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_home_product_image"
        android:layout_marginLeft="20dp"
        android:text="我是商品名称"
        android:textSize="15sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_home_product_name"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:id="@+id/item_home_product_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/item_home_product_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_below="@id/item_home_product_image"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="¥00.00"
                android:textColor="@color/colorred"
                android:textSize="15sp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/item_home_product_given"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#4ccfed"
                    android:text="满赠"
                    android:textColor="@color/app_background"
                    />

                <TextView
                    android:id="@+id/item_home_product_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#6db248"
                    android:text="满减"
                    android:textColor="@color/app_background"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>