<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirmorder"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
>
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/app_background"
            android:textSize="@dimen/cartxt_16"
            android:layout_centerInParent="true"
            android:text="确认订单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/r"
            android:padding="10dp"
            android:text="收货信息"
            android:textColor="@color/colorred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_tv_message"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/r"
            android:layout_width="wrap_content"
            android:text="湖北省 十堰市 竹山县 广延路1188弄2号楼3101 联系人：麦舒 联系电话：18502146749"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/a_4"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/bar_bottom_color"
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/r1"
            android:padding="10dp"
            android:textColor="@color/colorred"
            android:text="购物清单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ListView
            android:id="@+id/order_listView"
            android:layout_below="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="150dp"></ListView>
    </RelativeLayout>
    <View
        android:background="@color/bar_bottom_color"
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/r3"
            android:padding="10dp"
            android:text="配送方式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:text="快递 运费:"
            android:padding="10dp"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/my_money"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="￥0.01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/bar_bottom_color"
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="发票信息"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/a_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/bar_bottom_color"
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>
    <EditText
        android:hint="若您对订单有特殊性要求，可以在此备注"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_back"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="商品"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="+"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:textColor="@color/my_money"
            android:text="￥68.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="运费"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="+"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:textColor="@color/my_money"
            android:text="￥68.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="优惠"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="+"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:textColor="@color/my_money"
            android:text="￥68.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:text="提交订单"
        android:textColor="@color/app_background"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
